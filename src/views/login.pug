extends base.pug

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(placeholder="Username" name="username" type="text" requied)
        input(placeholder="Password" name="password" type="password" requied)
        input(type="submit" value="Login")
        br
        a(href="/users/github/start") Continue with Github
    hr
    div
        span Don't have an account? 
        a(href="/join") Join now &rarr;