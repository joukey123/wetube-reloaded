        span.message.error=errorMessage
     form(method="POST")
       input(type="password", placeholder="Old Password" name="oldPassword", requied)
       input(type="password", placeholder="New Password" name="newPassword", requied)
       input(type="password", placeholder="New Password Confirm" name="newPasswordConfirm", requied)
       input(type="submit", value="Change Password")