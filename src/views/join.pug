extends base.pug

block content
    if(errorMessage)
        span.message.error=errorMessage
    form(method="POST")
        input(placeholder="Name" name="name" type="text" requied).loginform__input 
        input(placeholder="Email" name="email" type="email" requied).loginform__input 
        input(placeholder="Username" name="username" type="text" requied).loginform__input 
        input(placeholder="Password" name="password" type="password" requied).loginform__input 
        input(placeholder="Password confirm" name="password2" type="password" requied).loginform__input 
        input(placeholder="Location" name="location" type="text" requied).loginform__input 
        input(type="submit" value="Join Now").loginform__submit 
        include partials/social-login
    div.auth-switch
        span Already have an account? 
        a(href="/login") Log in now &rarr;