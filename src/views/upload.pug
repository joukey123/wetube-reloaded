extends base.pug

block content
    div.recording__container
        video#preview
        button#actionBtn Start Recording
    if errorMessage
        span.message.error=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", id="video" accept="video/*" required name="video").loginform__input 
        label(for="thumb") Thumbnail File
        input(type="file", id="thumb" accept="image/*" required name="thumb").loginform__input 
        input(name="title", type="text", placeholder="Title", required, maxlength=80).loginform__input 
        input(name="description", type="text", placeholder="Description", required, minlegth=20).loginform__input 
        input(name="hashtags", type="text", placeholder="Hashtags, comma", required).loginform__input 
        input(type="submit", value="Upload Video").loginform__submit

block scripts
    script(src="/static/js/recorder.js")
