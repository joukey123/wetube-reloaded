extends base.pug

block content
    div
        video#preview
        button#actionBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", id="video" accept="video/*" required name="video")
        label(for="thumb") Thumbnail File
        input(type="file", id="thumb" accept="image/*" required name="thumb")
        input(name="title", type="text", placeholder="Title", required, maxlength=80)
        input(name="description", type="text", placeholder="Description", required, minlegth=20)
        input(name="hashtags", type="text", placeholder="Hashtags, comma", required)
        input(type="submit", value="Upload Video")

block scripts
    script(src="/static/js/recorder.js")
