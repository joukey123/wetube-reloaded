extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", id="video" accept="video/*" required name="video")
        input(name="title", type="text", placeholder="Title", required, maxlength=80)
        input(name="description", type="text", placeholder="Description", required, minlegth=20)
        input(name="hashtags", type="text", placeholder="Hashtags, comma", required)
        input(type="submit", value="Upload Video")